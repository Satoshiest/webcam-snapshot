import tkinter as tk
from PIL import Image, ImageTk
import cv2
import glob

class GUI:
    def __init__(self, mainwindow):
        self.counter = 0
        self.mainframe = mainframe
        self.mainframe.title("View Mode Frame")
        self.mainframe.state('zoomed')
        self.mainframe.configure(bg = 'silver')
        self.frame = tk.Frame(mainwindow)
        self.image = tk.Label(self.frame)
        self.frame.place(relheight = 0.9, relwidth = 0.9, relx = 0.05, rely = 0.05)
        self.image.pack()
        self.pic()
        #self.video()



    def picture_viewer(self):
        self.image_list= []
        for i in glob.glob(r'C:\Users\uokta\Downloads\webcam-snapshot-main (1)\webcam-snapshot-main\term project\*.jpg'):
            picture = i
            self.image_list.append(picture)

        if self.counter == len(self.image_list) -1:
            self.counter = 0
        else:
            self.counter = self.counter + 1

        self.file = self.image_list [self.counter]
        self.load = Image.open(self.file)

        self.image_width = self.load.size[0]
        self.image_height = self.load.size[1]

        self.real_aspect = self.pic_width/self.image_height

        self.cal_width = int(self.real_aspect * 800)

        self.load2 = self.load.resize((self.cal_width, 800))

        self.render = ImageTk.PhotoImage(self.load2)
        self.image.config(image = self.render)
        self.image.image = self.render
        root.after(2000, self.image)

root = tk.Tk()
myprog = GUI(root)
root.mainloop()
