class HelloWorld(tk.Tk):
    def __init__(self, image_files):
        super().__init__()

        # image = Image.open(r'C:\Users\Zaid\Desktop\Circle.PNG')
        # photo = ImageTk.PhotoImage(image)
       	# label = Label(image=photo)

        self.title("Title Here")
        self.value = 0
				tk.Tk.__init__(self)
        self.pictures = ((tk.PhotoImage(file=image), image)
                              for image in image_files)
        self.picture_display = tk.Label(self)
        self.picture_display.pack()
        img_name = next(self.pictures)
				
      	for i in range (1, 6):
        	label = tk.Label(self, image=img_name)
        	label.pack(expand=True, fill = "both", side = 'left')
        
        label.image = img_name

    path="C:\Users\sairajesh\Desktop\image"
		image_files=os.listdir(path)

    def run(self):
        self.mainloop()


root = HelloWorld()

root.mainloop()

class MyGUI:
    def __init__(self, parent):
        self.parent = parent
        self.frame = Frame(parent).grid(columnspan=5)
        
        for col_num in range(5):
            self.parent.columnconfigure(col_num, weight =1)
            
        self.labelA = Label(parent, text='A', bg = 'blue', relief ='groove')
        self.labelA.grid(row=0, column=0, columnspan =3,  sticky= 'ew')
        #self.labelA.pack(fill = X)
        
        self.labelB = Label(parent, text='B', bg = 'white', relief ='groove')
        self.labelB.grid(row=1, column=0, columnspan =3,  sticky= 'ew')
        
        self.labelC = Label(parent, text='C', bg = 'white', relief ='groove')
        self.labelC.grid(row=0, column=3, sticky= 'ew', columnspan =3)
        
        self.labelD = Label(parent, text='D', bg = 'blue', relief ='groove')
        self.labelD.grid(row=1, column=3,sticky= 'ew', columnspan =3)        
        
